doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Text Encoder
    link(rel="stylesheet", href="/style.css")
  body
    h1 Text Encoder
    form(action="/encode", method="POST")
      textarea(name="text", placeholder="Enter text to encode...").input-text
      select(name="method")
        option(value="vigenere") Vigen√®re Cipher
        option(value="cesar") Caesar Cipher
        option(value="base64") Base64
        option(value="binary") Binary
      button(type="submit") Encode
    if encodedText
      h2 Encoded Text
      textarea.readonly(name="encodedText", readonly)= encodedText
